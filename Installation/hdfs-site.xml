<?xml version="1.0"?>
<configuration>
  <property>
    <name>dfs.nameservices</name>
    <value>big-cluster</value>
  </property>
  <property>
    <name>dfs.ha.namenodes.big-cluster</name>
    <value>nn1,nn2</value>
  </property>
  <property>
    <name>dfs.namenode.rpc-address.big-cluster.nn1</name>
    <value>big01:8020</value>
  </property>
  <property>
    <name>dfs.namenode.rpc-address.big-cluster.nn2</name>
    <value>big02:8020</value>
  </property>
  <property>
    <name>dfs.namenode.http-address.big-cluster.nn1</name>
    <value>big01:50070</value>
  </property>
  <property>
    <name>dfs.namenode.http-address.big-cluster.nn2</name>
    <value>big02:50070</value>
  </property>
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>/var/data/hadoop/hdfs/nn</value>
  </property>
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>/var/data/hadoop/hdfs/dn</value>
  </property>
  <property>
    <name>dfs.namenode.shared.edits.dir</name>
    <value>qjournal://big01:8485;big02:8485;big03:8485/big-cluster-journal</value>
  </property>
  <property>
    <name>dfs.client.failover.proxy.provider.big-cluster</name>
    <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
  </property>
  <property>
    <name>dfs.ha.fencing.methods</name>
    <value>sshfence</value>
  </property>
  <property>
    <name>dfs.ha.fencing.ssh.private-key-files</name>
    <value>/root/.ssh/id_rsa</value>
  </property>
  <property>
    <name>dfs.ha.automatic-failover.enabled</name>
    <value>true</value>
  </property>
</configuration>
